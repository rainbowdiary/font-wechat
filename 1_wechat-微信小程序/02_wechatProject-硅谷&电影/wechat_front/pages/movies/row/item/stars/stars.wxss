.stars {
  display: inline-flex;
  align-items: center;
}

.stars .star {
  width: 24rpx;
  height: 24rpx;
  margin-right: 3rpx;
  vertical-align: center;
}

.stars .star:last-child {
  margin-right: 0rpx;
}

.stars .star-text {
  color: #1f3463;
  margin-left: 24rpx;
  vertical-align: center;
  font-size: 24rpx;
}