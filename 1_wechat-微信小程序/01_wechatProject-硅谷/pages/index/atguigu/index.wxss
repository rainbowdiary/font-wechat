.main {
  background-color: rgb(247, 247, 247);
}

.main .header {
  width: 750rpx;
  height: 113rpx;
}

.main .header image {
  width: 100%;
  height: 100%;
}

.main swiper .swiper-image {
  /* 750 * 375 */
  width: 750rpx;
  height: 375rpx;
}

/* 课程列表 */
/*  区域主体
      字体大小:25
      图片尺寸:122 * 122   */
.course {
  width: 750rpx;
  height: 400rpx;
  margin-top: 20rpx;
  background-color: #fff;
}

.course .titles {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  padding-top: 33rpx;
  padding-bottom: 38rpx;
}

.course .titles .course-title1 {
  font-size: 44rpx;
}

.course .titles .course-title2 {
  margin-top: 20rpx;
  font-size: 29rpx;
}

.course-lists {
  display: flex;
  justify-content: space-around;
}

.course-lists .course-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.course-lists .course-item image {
  width: 122rpx;
  height: 122rpx;
}

.course-lists .course-item .item-text {
  font-size: 25rpx;
}

