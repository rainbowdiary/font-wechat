/**index.wxss**/
/*
# launch页面
    头像
        头像尺寸: 150 * 150
        距顶部距离: 160
*/
page {
  width: 100%;
  height: 100%;
}

.userinfo {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: pink;
}

.avatar {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  margin-top: 150rpx;
}

/* 距顶部距离: 150
        文字加粗
        文字大小32*/
.userinfo .userinfo-nickname {
  margin-top: 150rpx;
  font-weight: bolder;
  font-size: 32rpx;
}

/*    按钮
        按钮尺寸 200*80
        距离文本尺寸 200
        边框样式 1px solid #405f80
        按钮圆角:5rpx;
        按钮文字
              字体大小:22rpx
              字体加粗:bold
              行高:80
              字体颜色:#405f80*/
.userinfo .btn {
  width: 200rpx;
  height: 80rpx;
  border: 1px solid #405f80;
  border-radius: 5rpx;
  text-align: center;
  margin-top: 200rpx;
}

.userinfo .btn text {
  font-size: 22rpx;
  font-weight: bold;
  line-height: 80rpx;
  color: #405f80;
}