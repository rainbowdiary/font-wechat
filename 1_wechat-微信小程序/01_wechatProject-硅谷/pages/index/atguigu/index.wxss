/* 底部区域*/
.footer {
  width: 750rpx;
  height: 330rpx;
  background-color: rgb(51, 51, 51);
  display: flex;
  color: #666
}

.footer .footer-left {
  box-sizing: border-box;
  width: 264rpx;
  height: 330rpx;
  padding: 20rpx 20rpx 1rpx 20rpx;
  font-size: 24rpx;
  text-align: center;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.footer .footer-left image {
  width: 100%;
  height: 240rpx;
}

.footer .footer-right {
  width: 486rpx;
  height: 300rpx;
  box-sizing: border-box;
  padding: 15rpx 0 15rpx 0;
  font-size: 27rpx;
}

.footer .footer-right .right-bottom {
  margin-top: 10rpx;
}

.footer .footer-right .title {
  display: block;
}